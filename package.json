{
  "name": "@nestmtx/core",
  "version": "1.0.0",
  "description": "NestMTX Core",
  "main": "dist/index.js",
  "scripts": {
    "test": "node -r ts-node/register bin/test.ts",
    "watch": "nodemon",
    "build": "rm -rf dist && npx tsc && rm -rf dist/bin && rm -rf dist/tests",
    "build:watch": "rm -rf dist && npx tsc -w && rm -rf dist/bin && rm -rf dist/tests",
    "type-check": "npx tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "author": "Jak Guru <jak@jak.guru>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@japa/assert": "^1.4.1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@types/amqplib": "^0.10.1",
    "@types/dotenv": "^8.2.0",
    "@types/knex": "^0.16.1",
    "@types/luxon": "^3.3.0",
    "adonis-preset-ts": "^2.1.0",
    "c8": "^8.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typedoc-plugin-coverage": "^2.1.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@jakguru/milicron": "^1.0.0",
    "@lukeed/ms": "^2.0.2",
    "@nestmtx/config": "^1.0.8",
    "@nestmtx/pando-logger": "^1.0.1",
    "@nestmtx/socket-server": "^1.0.2",
    "canvas": "^2.11.2",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "knex": "^3.1.0",
    "mssql": "^10.0.1",
    "mysql2": "^3.7.0",
    "pg": "^8.11.3",
    "pick-port": "^2.0.1",
    "reflect-metadata": "^0.2.1",
    "safe-stable-stringify": "^2.4.3",
    "secure-json-parse": "^2.7.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "dist"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  }
}
